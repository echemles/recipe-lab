{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://echemles.github.io/recipe-lab/schema/recipe-seed.schema.json",
  "title": "Recipe Seed File",
  "description": "Validates recipe seed JSON consumed by scripts/test-db-setup.ts and related tooling.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "recipes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/recipe"
      }
    }
  },
  "required": ["recipes"],
  "definitions": {
    "recipeImage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["unsplash"]
        },
        "photoId": {
          "type": "string",
          "minLength": 1
        },
        "urlSmall": {
          "type": "string",
          "format": "uri"
        },
        "urlRegular": {
          "type": "string",
          "format": "uri"
        },
        "urlFull": {
          "type": "string",
          "format": "uri"
        },
        "alt": {
          "type": "string"
        },
        "creditName": {
          "type": "string",
          "minLength": 1
        },
        "creditUsername": {
          "type": "string",
          "minLength": 1
        },
        "creditUrl": {
          "type": "string",
          "format": "uri"
        },
        "sourceUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["provider", "photoId", "urlSmall", "urlRegular", "urlFull", "alt", "creditName", "creditUsername", "creditUrl", "sourceUrl"]
    },
    "ingredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "quantity": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        },
        "tooltip": {
          "type": "string"
        },
        "isSubrecipe": {
          "type": "boolean"
        }
      },
      "required": ["quantity", "unit", "name"]
    },
    "macros": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "calories": {
          "type": "number",
          "minimum": 0
        },
        "protein": {
          "type": "number",
          "minimum": 0
        },
        "carbohydrates": {
          "type": "number",
          "minimum": 0
        },
        "fat": {
          "type": "number",
          "minimum": 0
        },
        "fiber": {
          "type": "number",
          "minimum": 0
        },
        "sugar": {
          "type": "number",
          "minimum": 0
        },
        "sodium": {
          "type": "number",
          "minimum": 0
        },
        "cholesterol": {
          "type": "number",
          "minimum": 0
        },
        "saturatedFat": {
          "type": "number",
          "minimum": 0
        },
        "unsaturatedFat": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["calories", "protein", "carbohydrates", "fat"]
    },
    "recipe": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{24}$",
          "description": "Optional MongoDB ObjectId string (24 hex chars)."
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "ingredients": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/ingredient"
          }
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "prepTimeMinutes": {
          "type": "integer",
          "minimum": 0
        },
        "cookTimeMinutes": {
          "type": "integer",
          "minimum": 0
        },
        "servings": {
          "type": "integer",
          "minimum": 1
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "macros": {
          "$ref": "#/definitions/macros"
        },
        "images": {
          "type": "array",
          "maxItems": 3,
          "items": {
            "$ref": "#/definitions/recipeImage"
          }
        }
      },
      "required": ["title", "description", "ingredients", "steps"],
      "allOf": [
        {
          "if": {
            "required": ["createdAt"]
          },
          "then": {
            "required": ["updatedAt"]
          }
        }
      ]
    }
  }
}
